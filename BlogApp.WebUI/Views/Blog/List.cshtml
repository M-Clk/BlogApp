@model IEnumerable<Blog>
@{
    ViewData["Title"] = "List";
}

    <div class="container mt-3">
        <h2>Blog List</h2>
        <hr /> 
        <div class="row">
            <div class="col">

                @if(Model.Count()>0)
                {
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Date</th>
                                <th>isApproved</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BlogId</td>
                                    <td>
                                        <img src="~/img/@item.Image" alt="@item.Title" width="100" />
                                    </td>
                                    <td>@item.Title</td>
                                    <td>@item.Date</td>
                                    <td>@item.isApproved</td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId">Details</a>
                                        <a class="btn btn-danger btn-sm" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }
                else
                { 
                <div class="alert alert-danger"> Blog Eklenmemis.</div>
                }
            </div>
        </div>
    </div>

